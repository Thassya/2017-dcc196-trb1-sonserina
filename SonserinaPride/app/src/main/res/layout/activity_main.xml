<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sonserina.ufjf.slytherinpride.MainActivity">

    <Button
        android:id="@+id/btnCadastrarParticipante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastrar Participante"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btnCadastraReserva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastrar Reserva"
        tools:layout_editor_absoluteY="72dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btnCadastraLivros"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Cadastrar Livros"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnCadastrarParticipante"
        tools:layout_editor_absoluteY="16dp" />

    <ListView
        android:id="@+id/lstParticipantes"
        android:layout_width="319dp"
        android:layout_height="340dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCadastraReserva"
        app:layout_constraintVertical_bias="0.461"
        tools:layout_editor_absoluteY="114dp" />

</android.support.constraint.ConstraintLayout>
